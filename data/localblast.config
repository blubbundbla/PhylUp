### never have in-line comments in this file

#######
## BLAST SETTINGS

[blast]

#The statistcal cutoff for matches
e_value_thresh = 0.001

# the max number of matches for each blast search
hitlist_size = 500

# define location for blast database, should be local for the moment.
location = local
#Options [local, remote]; currently should not be changed to remote - not yet implemented

# if location = local:
localblastdb = /media/blubb/schmuh/local_blast_db/
# localblastdb path must have '/'

# if location = remote:
#default url_base is ncbi, to run on AWS set url here
#url_base =

# number of cores to use
num_threads = 8



fix_blast_result_folder = True
# uses same blast folder across runs - be carefull - if input sequences across runs have different loci,
# this will not update the results as it uses files which exists. Furthermore, if the blast settings above are changed all files need to be deleted.


unpublished = False
unpubl_data =
#Path to folder with files - no files other than unpublished seqs is allowed - unpubl names needs to go somewhere else
unpubl_names =
# path to file with unique name and taxon name

#######
## Alignment SETTINGS

[phylup]

#This is how much shorter new sequences are allowed to be compared to your original sequence lengths when added to aln.
# Is used in during the process of adding new seqs as well as removing seq that are too short
min_len = 0.65

# max length for values to add to aln
max_len = 2.5

# value that determines how many seq need to be present before the beginning and end of alignment will be trimmed
trim_perc = 0.75


#############
# FILTERTYPES
filtertype = blast
# Options [blast, length]

threshold = 1
downtorank = species
########

# set to True if you want to build phyl with different filter settings
different_level = False


##############
# Tree calculation

update_tree = True
# set to False if phylogeny shall not be updated
backbone = False
# set to True if provided phylogeny shall be used as a constraint tree during phylogenetic updating


modeltest_criteria = AICc
# must be BIC, AIC or AICc

#######
## INTERNAL PhylUp SETTINGS
# Things here you should not need to change!

[ncbi_parser]
nodes_fn = ./data/nodes.dmp
names_fn = ./data/names.dmp



